<?xml version="1.0" encoding="utf-8"?>
<!-- КРИТИЧНО: Постоянный черный слой под WebView -->
<!-- Предотвращает появление стандартной кнопки Play Android -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    
    <!-- Постоянный черный слой (всегда видимый) -->
    <View
        android:id="@+id/blackBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />
    
    <!-- WebView будет добавлен программно поверх черного слоя -->
    <FrameLayout
        android:id="@+id/webViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />
    
    <!-- Прозрачный overlay для блокировки тапов по video (предотвращает показ контролов) -->
    <View
        android:id="@+id/tapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:focusable="false" />
    
</FrameLayout>

