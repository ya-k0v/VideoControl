<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки VideoControl"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Адрес сервера"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/serverUrlInput"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="http://"
        android:inputType="textUri"
        android:textColor="@android:color/white"
        android:textColorHint="#888888"
        android:background="@android:color/darker_gray"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID устройства"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/deviceIdInput"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint=""
        android:inputType="textNoSuggestions"
        android:textColor="@android:color/white"
        android:textColorHint="#888888"
        android:background="@android:color/darker_gray"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        android:maxLength="50" />

    <CheckBox
        android:id="@+id/showStatusCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показывать статусы (подключение, буферизация)"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:checked="false" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Сохранить и запустить"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Примеры:\n• Сервер: http://192.168.1.100\n• ID: ATV001, ATV002, BR001"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        android:gravity="center" />

</LinearLayout>

